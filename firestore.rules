rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;   

    }

    match /games/{gameId} {
      allow read:   
 if request.auth != null; // Allow all authenticated users to read games
    }

    match /{document=**} {
      allow read, write: if false; // Deny access to all other documents by default
    }
  }
}